@using Blog.Models.ViewModel;
@model CreatePostViewModel
<div class="register-container p-4">
    <form method="post">
        <div class="input-area">
            <label asp-for="Title" class="label"></label>
            <input asp-for="Title" autocomplete="off" name="Email" id="Email" class="input" type="email">
            <span asp-validation-for="Title" class="text-danger"></span>
            <div></div>
        </div>
        <div class="input-area">
            <label asp-for="Description" class="label"></label>
            <textarea asp-for="Description" autocomplete="off" name="Name" class="large-input" type="password"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
            <div></div>
        </div>
        <div class="input-area">
            <label class="label">Image</label>
            <input autocomplete="off" name="ConfirmPassword" id="Email" class="input" type="file">
            <div></div>
        </div>
        <button class="btn" type="submit">Register</button>
    </form>
</div>